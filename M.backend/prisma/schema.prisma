generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  icon      Image?   @relation("UserIcon") // 1-1 relação com Image
  bio       String?
  boards    Board[]
  createdAt DateTime @default(now())
}

model Board {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  colors      String?
  image       String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  images      Image[] // múltiplas imagens relacionadas ao board
  createdAt   DateTime @default(now())
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  user      User?    @relation("UserIcon", fields: [userId], references: [id])
  userId    Int?     @unique // necessário para one-to-one
  board     Board?   @relation(fields: [boardId], references: [id])
  boardId   Int?
  createdAt DateTime @default(now())
}
